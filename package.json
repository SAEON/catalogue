{
  "name": "@saeon/atlas",
  "description": "SAEON's 'Atlas' codebase (monorepo)",
  "scripts": {
    "test": "npm --prefix src/@saeon/catalogue-search test",
    "lint": "eslint -c .eslintrc.js \"src/**/*.{js,jsx}\"",
    "prettier:changed": "pretty-quick",
    "prettier": "prettier --write \"./**/*.@(js|jsx|mjs|graphql)\"",
    "build-readme": "scripts/build-readme.sh",
    "update-git-snapshot": "git add .",
    "atlas-api:start:prod": "npm --prefix src/@saeon/atlas-api run start:prod",
    "atlas-client:build": "npm --prefix src/@saeon/atlas-client run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run build-readme && npm run prettier:changed && npm run lint && npm run update-git-snapshot"
    }
  },
  "author": "zach@saeon.ac.za",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEONData/saeon-atlas.git"
  },
  "homepage": "https://github.com/SAEONData/saeon-atlas"
}
