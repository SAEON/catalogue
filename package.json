{
  "name": "@saeon/js",
  "description": "SAEON's 'Atlas' codebase (monorepo)",
  "scripts": {
    "test": "npm --prefix src/packages/catalogue-search test",
    "start": "npm --prefix src/services/anyproxy start & npm --prefix src/services/atlas-api start & npm --prefix src/services/atlas-client start",
    "lint": "eslint -c .eslintrc.js \"src/**/*.{js,jsx}\"",
    "prettier:changed": "pretty-quick",
    "prettier": "prettier --write \"./**/*.@(js|jsx|mjs|graphql)\"",
    "bump-patch": "scripts/bump-patch.sh",
    "configure-git": "git config --local include.path ../.gitconfig",
    "update-git-snapshot": "git add .",
    "************ GENERATORS **********": "",
    "generate-npm-package": "npm --prefix src/generators/npm-package run plop",
    "generate-react-client": "npm --prefix src/generators/react-client run plop",    
    "************ PACKAGES **********": "",
    "check-package-updates": "scripts/check-package-updates.sh",
    "update-package-dependencies": "scripts/update-package-dependencies.sh",
    "install-package-dependencies": "scripts/install-package-dependencies.sh",
    "publish-all-packages:patch": "scripts/publish-all.sh -s patch",
    "publish-all-packages:minor": "scripts/publish-all.sh -s minor",
    "publish-all-packages:major": "scripts/publish-all.sh -s major"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run bump-patch && npm run test && npm run prettier:changed && npm run lint && npm run update-git-snapshot"
    }
  },
  "author": "zach@saeon.ac.za,steven@saeon.ac.za",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.3.0",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "dependencies": {
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-optional-chaining": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "babel-plugin-transform-imports": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEONData/saeon-atlas.git"
  },
  "homepage": "https://github.com/SAEONData/saeon-atlas"
}
