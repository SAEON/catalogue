{
  "name": "@saeon/atlas",
  "description": "SAEON's 'Atlas' codebase (monorepo)",
  "scripts": {
    "**************** GENERAL": "****************",
    "start": "npm-run-all -p atlas-api:start atlas-client:start",
    "test": "npm-run-all -p atlas-api:start ol-react:start",
    "lint": "eslint -c .eslintrc.js \"src/**/*.{js,jsx}\"",
    "prettier:staged": "pretty-quick --staged",
    "**************** ATLAS-API": "****************",
    "atlas-api:start": "npm --prefix src/@saeon/atlas-api start",
    "**************** ATLAS-CLIENT": "****************",
    "atlas-client:start": "npm --prefix src/@saeon/atlas-client start",
    "atlas-client:build": "npm --prefix src/@saeon/atlas-client run build",
    "**************** OL-REACT": "****************",
    "ol-react:start": "npm --prefix src/@saeon/ol-react start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all -s prettier:staged lint"
    }
  },
  "author": "zach@saeon.ac.za",
  "license": "MIT",
  "devDependencies": {
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.10",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "url-loader": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "file-loader": "^5.0.2"
  },
  "dependencies": {
    "ol": "^6.1.1",
    "@babel/runtime": "^7.8.4",
    "@babel/runtime-corejs3": "^7.8.4",
    "typeface-roboto": "0.0.75",
    "react-window": "^1.8.5",
    "url": "^0.11.0",
    "react-beautiful-dnd": "^12.2.0",
    "react-draggable": "^4.2.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "@material-ui/core": "^4.9.2",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.42"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEONData/saeon-atlas.git"
  },
  "bugs": {
    "url": "https://github.com/SAEONData/saeon-atlas/issues"
  },
  "homepage": "https://github.com/SAEONData/saeon-atlas"
}
