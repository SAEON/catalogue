{
  "name": "@saeon/catalogue",
  "description": "SAEON's Catalogue software codebase",
  "type": "module",
  "scripts": {
    "************ TESTS **********": "",
    "************ START SCRIPTS **********": "",
    "api": "npm --prefix src/api start",
    "clients": "npm --prefix src/clients start",
    "proxy": "npm --prefix src/proxy start",
    "************ REPOSITORY TOOLING **********": "",
    "prepare": "husky install",
    "doc": "doctoc README.md && doctoc platform/README.md && doctoc diagrams/README.md && doctoc src/packages/README.md && doctoc src/tools/README.md && doctoc src/clients/README.md && doctoc src/api/README.md && doctoc src/proxy/README.md && doctoc platform/README.md && doctoc src/clients/tests/README.md && npm run --prefix diagrams build",
    "prettier:changed": "pretty-quick",
    "prettier": "prettier --write \"./**/*.@(js|jsx|json|mjs|cjs|graphql|yml)\"",
    "bump-patch": "TC=utc node scripts/bump-patch.js",
    "configure-git": "git config --local include.path ../.gitconfig",
    "update-git-snapshot": "git add .",
    "lint": "npm --prefix src/api run lint & npm --prefix src/clients run lint",
    "************ DEPENDENCY MANAGEMENT **********": "",
    "ncu": "ncu",
    "ncu -u": "ncu -u",
    "clean-installed-files": "find . -name node_modules -type d -exec rm -rv {} + && find . -name package-lock.json -type f -delete",
    "install-dependencies": "TC=utc node scripts/install-dependencies.js",
    "update-dependencies": "TC=utc node scripts/manage-dependencies.js -u && TC=utc node scripts/install-dependencies.js",
    "check-dependency-updates": "TC=utc node scripts/manage-dependencies.js",
    "************ PACKAGES **********": "",
    "build-all-packages": "TC=utc node scripts/build-all-packages.js",
    "publish-all-packages:patch": "TC=utc node scripts/publish-all.js -s patch",
    "publish-all-packages:minor": "TC=utc node scripts/publish-all.js -s minor",
    "publish-all-packages:major": "TC=utc node scripts/publish-all.js -s major",
    "************ DEPLOYMENT **********": "",
    "configure-centos-7-server": "ansible-playbook platform/ansible/playbooks/centos-7.yml -i platform/ansible/inventories/centos-7"
  },
  "author": "zd.smith@saeon.nrf.ac.za",
  "license": "MIT",
  "devDependencies": {
    "arg": "^5.0.1",
    "doctoc": "^2.1.0",
    "eslint": "^8.4.1",
    "husky": "^7.0.4",
    "npm-check-updates": "^12.0.3",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEON/catalogue.git"
  },
  "homepage": "https://github.com/SAEON/catalogue"
}
