{
  "name": "@saeon/atlas",
  "description": "SAEON's 'Atlas' codebase (monorepo)",
  "scripts": {
    "**************** GENERAL": "****************",
    "lint": "eslint -c .eslintrc.js \"src/**/*.{js,jsx}\"",
    "prettier:changed": "pretty-quick",
    "prettier": "prettier --write \"./**/*.@(js|jsx|mjs|graphql)\"",
    "build-readme": "scripts/build-readme.sh",
    "update-git-snapshot": "git add .",
    "test": "npm-run-all -p catalogue-search:test",
    "test:watch": "npm-run-all -p catalogue-search:test:watch",
    "**************** DEV": "****************",
    "start": "npm-run-all -p atlas-api:start atlas-client:start",
    "**************** ATLAS-API": "****************",
    "atlas-api:start": "npm --prefix src/@saeon/atlas-api start",
    "atlas-api:start:prod": "npm --prefix src/@saeon/atlas-api run start:prod",
    "**************** ATLAS-CLIENT": "****************",
    "atlas-client:start": "npm --prefix src/@saeon/atlas-client start",
    "atlas-client:build": "npm --prefix src/@saeon/atlas-client run build",
    "**************** OL-REACT": "****************",
    "ol-react:build": "npm --prefix src/@saeon/ol-react run build",
    "ol-react:publish:patch": "npm --prefix src/@saeon/ol-react run publish:patch",
    "ol-react:publish:minor": "npm --prefix src/@saeon/ol-react run publish:minor",
    "ol-react:publish:major": "npm --prefix src/@saeon/ol-react run publish:major",
    "**************** CATALOGUE-SEARCH": "****************",
    "catalogue-search:build": "npm --prefix src/@saeon/catalogue-search run build",
    "catalogue-search:test": "npm --prefix src/@saeon/catalogue-search run test",
    "catalogue-search:test:watch": "npm --prefix src/@saeon/catalogue-search run test:watch",
    "catalogue-search:publish:patch": "npm --prefix src/@saeon/catalogue-search run publish:patch",
    "catalogue-search:publish:minor": "npm --prefix src/@saeon/catalogue-search run publish:minor",
    "catalogue-search:publish:major": "npm --prefix src/@saeon/catalogue-search run publish:major",
    "**************** DOCS": "****************",
    "docs:watch": "styleguidist server --config src/docs/styleguide.config.js",
    "docs:build": "styleguidist build --config src/docs/styleguide.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all -s test build-readme prettier:changed lint update-git-snapshot"
    }
  },
  "author": "zach@saeon.ac.za",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.6",
    "babel-loader": "^8.1.0",
    "copyfiles": "^2.2.0",
    "css-loader": "^3.5.1",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.0.4",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "react-styleguidist": "^11.0.5",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "@babel/runtime-corejs3": "^7.9.2",
    "@date-io/date-fns": "^1.3.13",
    "@material-ui/core": "^4.9.9",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.48",
    "@material-ui/pickers": "^3.2.10",
    "@saeon/catalogue-search": "^1.1.3",
    "@saeon/ol-react": "^7.1.3",
    "axios": "^0.19.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.11.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^15.0.0",
    "graphql-tools": "^4.0.7",
    "html2canvas": "^1.0.0-rc.5",
    "http-proxy-middleware": "^1.0.3",
    "morgan": "^1.10.0",
    "ol": "^6.3.1",
    "react": "^16.13.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "^16.13.1",
    "react-draggable": "^4.2.0",
    "react-json-tree": "^0.11.2",
    "react-resizable": "^1.10.1",
    "react-virtualized": "^9.21.2",
    "react-window": "^1.8.5",
    "react-window-infinite-loader": "^1.0.5",
    "typeface-roboto": "0.0.75",
    "url": "^0.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEONData/saeon-atlas.git"
  },
  "homepage": "https://github.com/SAEONData/saeon-atlas"
}
