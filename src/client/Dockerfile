# Build client
FROM node:16.6.1 as build

ARG API_PUBLIC_ADDRESS
ARG CATALOGUE_CLIENT_ADDRESS
ARG DEPLOYMENT_ENV
ARG CATALOGUE_CLIENT_DEFAULT_NOTICES
ARG LATEST_COMMIT
ARG CATALOGUE_CLIENT_FILTER_CONFIG_PATH
ARG CURATOR_CONTACT
ARG CATALOGUE_TECHNICAL_CONTACT
ARG CATALOGUE_LEGAL_CONTACT
ARG CATALOGUE_CLIENT_PROXY_ADDRESS

WORKDIR /app

RUN echo "API_PUBLIC_ADDRESS=$API_PUBLIC_ADDRESS" > .env
RUN echo "CATALOGUE_CLIENT_PROXY_ADDRESS=$CATALOGUE_CLIENT_PROXY_ADDRESS" >> .env
RUN echo "CURATOR_CONTACT=$CURATOR_CONTACT" >> .env
RUN echo "CATALOGUE_CLIENT_ADDRESS=$CATALOGUE_CLIENT_ADDRESS" >> .env
RUN echo "DEPLOYMENT_ENV=$DEPLOYMENT_ENV" >> .env
RUN echo "CATALOGUE_CLIENT_DEFAULT_NOTICES=$CATALOGUE_CLIENT_DEFAULT_NOTICES" >> .env
RUN echo "LATEST_COMMIT=$LATEST_COMMIT" >> .env
RUN echo "CATALOGUE_CLIENT_FILTER_CONFIG_PATH=$CATALOGUE_CLIENT_FILTER_CONFIG_PATH" >> .env
RUN echo "CATALOGUE_TECHNICAL_CONTACT=$CATALOGUE_TECHNICAL_CONTACT" >> .env
RUN echo "CATALOGUE_LEGAL_CONTACT=$CATALOGUE_LEGAL_CONTACT" >> .env

COPY . .
RUN npm ci --force --only=production
RUN npm run build

# Serve static files
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx/nginx.conf /etc/nginx/nginx.conf
COPY nginx/localhost.conf /etc/nginx/conf.d/default.conf
EXPOSE 80