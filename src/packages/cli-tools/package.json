{
  "name": "@saeon/cli-tools",
  "version": "0.0.25",
  "description": "Build CLI applications declaratively",
  "main": "dist/cjs/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "peerDependencies": {},
  "scripts": {
    "build": "rm -rf dist && rollup --config rollup.config.js",
    "publish:patch": "npm run build && TC=utc node ../../../scripts/publish.js -p @saeon/cli-tools -s patch",
    "publish:minor": "npm run build && TC=utc node ../../../scripts/publish.js -p @saeon/cli-tools -s minor",
    "publish:major": "npm run build && TC=utc node ../../../scripts/publish.js -p @saeon/cli-tools -s major",
    "prettier:watch": "onchange \"src/**/*.@(js|jsx|css|scss)\" -- prettier --write {{changed}}",
    "ncu": "ncu",
    "ncu -u": "ncu -u"
  },
  "keywords": [
    "@saeon/cli-tools"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/single-sign-on/single-sign-on.git"
  },
  "bugs": {
    "url": "https://github.com/single-sign-on/single-sign-on/issues"
  },
  "homepage": "https://github.com/single-sign-on/single-sign-on/tree/next/src/@saeon/cli-tools",
  "author": "zach@saeon.ac.za",
  "license": "MIT",
  "dependencies": {
    "arg": "^5.0.1",
    "ora": "^6.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "nodemon": "^2.0.15",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.63.0"
  }
}
