{
  "name": "@saeon/catalogue-search",
  "version": "5.3.0",
  "description": "Generally useful Lucene-based search for discovering SAEON's metadata records",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=16.13.1",
    "react-dom": ">=16.13.1"
  },
  "scripts": {
    "watch": "rimraf dist && nodemon --watch ./src --exec 'prettier --write \"src/**/*.@(js|json)\" && NODE_ENV=development babel --root-mode upward src --out-dir dist'",
    "test": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest",
    "test:watch": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest --watch",
    "build": "rimraf ./dist && NODE_ENV=production webpack",
    "publish:patch": "npm run build && ../../../scripts/publish.sh -p @saeon/catalogue-search -s patch",
    "publish:minor": "npm run build && ../../../scripts/publish.sh -p @saeon/catalogue-search -s minor",
    "publish:major": "npm run build && ../../../scripts/publish.sh -p @saeon/catalogue-search -s major",
    "prettier:watch": "onchange \"src/**/*.@(js|jsx|css|scss)\" -- prettier --write {{changed}}",
    "check-package-updates": "ncu",
    "update-package-dependencies": "ncu -u"
  },
  "keywords": [
    "@saeon/catalogue-search"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEONData/catalogue.git"
  },
  "bugs": {
    "url": "https://github.com/SAEONData/catalogue/issues"
  },
  "homepage": "https://github.com/SAEONData/catalogue/tree/master/src/@saeon/catalogue-search",
  "author": "zach@saeon.ac.za",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "babel-loader": "^8.1.0",
    "prop-types": "^15.7.2",
    "rimraf": "^3.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "babel-jest": "^26.2.2",
    "dotenv": "^8.2.0",
    "jest": "^26.2.2",
    "node-fetch": "^2.6.0",
    "nodemon": "^2.0.4",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "directories": {
    "test": "tests"
  }
}
