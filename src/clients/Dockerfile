###
# Temporary image
#
# Builds static files
# from client src
###
FROM node:16.10 as build

ARG API_PUBLIC_ADDRESS
ARG API_INTERNAL_ADDRESS
ARG CLIENTS_PUBLIC_ADDRESS
ARG DEPLOYMENT_ENV
ARG CLIENTS_DEFAULT_NOTICES
ARG LATEST_COMMIT
ARG CLIENTS_SEARCH_FILTER_CONFIG_PATH
ARG CURATOR_CONTACT
ARG TECHNICAL_CONTACT
ARG LEGAL_CONTACT
ARG PROXY_ADDRESS
ARG SUBDOMAIN_APP_ENTRIES

WORKDIR /app

RUN echo "API_PUBLIC_ADDRESS=$API_PUBLIC_ADDRESS" > .env
RUN echo "API_INTERNAL_ADDRESS=$API_INTERNAL_ADDRESS" >> .env
RUN echo "PROXY_ADDRESS=$PROXY_ADDRESS" >> .env
RUN echo "CURATOR_CONTACT=$CURATOR_CONTACT" >> .env
RUN echo "CLIENTS_PUBLIC_ADDRESS=$CLIENTS_PUBLIC_ADDRESS" >> .env
RUN echo "DEPLOYMENT_ENV=$DEPLOYMENT_ENV" >> .env
RUN echo "CLIENTS_DEFAULT_NOTICES=$CLIENTS_DEFAULT_NOTICES" >> .env
RUN echo "LATEST_COMMIT=$LATEST_COMMIT" >> .env
RUN echo "CLIENTS_SEARCH_FILTER_CONFIG_PATH=$CLIENTS_SEARCH_FILTER_CONFIG_PATH" >> .env
RUN echo "TECHNICAL_CONTACT=$TECHNICAL_CONTACT" >> .env
RUN echo "LEGAL_CONTACT=$LEGAL_CONTACT" >> .env
RUN echo "SUBDOMAIN_APP_ENTRIES=$SUBDOMAIN_APP_ENTRIES" >> .env

COPY . .
RUN npm ci --force --only=production
RUN npm run build



###
# Nginx image serving
# built static files
###
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html

COPY nginx/nginx.conf /etc/nginx/nginx.conf
# A server block needs to be mounted at runtime

EXPOSE 80