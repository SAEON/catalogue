{
  "name": "@saeon/api",
  "version": "0.0.123",
  "description": "Node.js/Express.js application supporting the @saeon/client application",
  "main": "index.js",
  "scripts": {
    "start": "rimraf .build && nodemon --ext js,graphql,json --watch ./src --exec 'prettier --write \"src/**/*.@(js|json|graphql)\" && NODE_ENV=development babel --root-mode upward src --out-dir .build && copyfiles -u 2 \"src/graphql/schema.graphql\" .build/graphql/ && copyfiles .env .build/ && NODE_ENV=development TZ=utc node .build'",
    "start:prod": "rimraf .build && NODE_ENV=production babel --root-mode upward src --out-dir .build && copyfiles -u 2 \"src/graphql/schema.graphql\" .build/graphql/ && copyfiles .env .build/ && NODE_ENV=production TZ=utc node .build",
    "check-package-updates": "ncu",
    "update-package-dependencies": "ncu -u"
  },
  "keywords": [
    "@saeon/api"
  ],
  "devDependencies": {
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEONData/saeon-atlas.git"
  },
  "bugs": {
    "url": "https://github.com/SAEONData/saeon-atlas/issues"
  },
  "homepage": "https://github.com/SAEONData/saeon-atlas/tree/master/src/@saeon/api#readme",
  "dependencies": {
    "@babel/cli": "^7.10.4",
    "@koa/router": "^9.1.0",
    "@saeon/catalogue-search": "^5.3.0",
    "@saeon/logger": "^3.1.12",
    "apollo-server-koa": "^2.15.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "copyfiles": "^2.3.0",
    "dataloader": "^2.0.0",
    "date-fns": "^2.14.0",
    "dotenv": "^8.2.0",
    "graphql": "^15.2.0",
    "graphql-tools": "^6.0.12",
    "graphql-type-json": "^0.3.2",
    "koa": "^2.13.0",
    "koa-compress": "^4.0.1",
    "koa-proxies": "^0.11.0",
    "mongodb": "^3.5.9",
    "node-fetch": "^2.6.0",
    "rimraf": "^3.0.2",
    "sift": "^13.1.10"
  },
  "author": "zach@saeon.ac.za, steven@saeon.ac.za",
  "license": "MIT"
}
