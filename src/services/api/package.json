{
  "name": "@saeon/api",
  "version": "0.0.171",
  "description": "Node.js/Express.js application supporting the @saeon/client application",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon --ext js,graphql,json --watch ./src --watch ../../packages/catalogue-search/src --exec 'prettier --write \"src/**/*.@(js|json|graphql)\" && NODE_ENV=development TZ=utc node --no-warnings --experimental-top-level-await --experimental-json-modules src'",
    "start:prod": "NODE_ENV=production TZ=utc node --no-warnings --experimental-top-level-await --experimental-json-modules src",
    "check-package-updates": "ncu",
    "update-package-dependencies": "ncu -u"
  },
  "keywords": [
    "@saeon/api"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEONData/saeon-atlas.git"
  },
  "bugs": {
    "url": "https://github.com/SAEONData/saeon-atlas/issues"
  },
  "homepage": "https://github.com/SAEONData/saeon-atlas/tree/master/src/@saeon/api#readme",
  "devDependencies": {
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "@koa/router": "^9.3.1",
    "@saeon/logger": "^3.1.12",
    "apollo-server-koa": "^2.16.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "cookie": "^0.4.1",
    "dataloader": "^2.0.0",
    "date-fns": "^2.15.0",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.0.15",
    "graphql-type-json": "^0.3.2",
    "koa": "^2.13.0",
    "koa-compress": "^5.0.1",
    "koa-proxies": "^0.11.0",
    "mongodb": "^3.5.9",
    "nanoid": "^3.1.10",
    "node-fetch": "^2.6.0",
    "sift": "^13.2.0"
  },
  "author": "zach@saeon.ac.za, steven@saeon.ac.za",
  "license": "MIT"
}
