{
  "name": "@catalogue/api",
  "version": "2.0.3",
  "description": "Node.js/Express.js application supporting the @saeon/client application",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon --ext js,graphql,json --watch ./src --watch ../../packages/catalogue-search/src --exec 'prettier --write \"src/**/*.@(js|json|graphql)\" && TZ=utc NODE_TLS_REJECT_UNAUTHORIZED=0 node --trace-warnings --experimental-json-modules src'",
    "start:prod": "TZ=utc node --no-warnings --experimental-json-modules src",
    "lint": "eslint -c .eslintrc.cjs \"src/**/*.{js,mjs,cjs}\"",
    "ncu": "ncu -x apollo-server-koa,mongodb",
    "ncu -u": "ncu -u -x apollo-server-koa,mongodb"
  },
  "keywords": [
    "@saeon/api"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEON/catalogue.git"
  },
  "bugs": {
    "url": "https://github.com/SAEON/catalogue/issues"
  },
  "homepage": "https://github.com/SAEON/catalogue/tree/master/src/@saeon/api#readme",
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/eslint-plugin": "^7.14.5",
    "eslint": "^7.31.0",
    "nodemon": "^2.0.12",
    "npm-check-updates": "^11.8.3",
    "prettier": "^2.3.2"
  },
  "dependencies": {
    "@koa/router": "^10.1.0",
    "@saeon/logger": "^6.2.8",
    "JSONStream": "^1.3.5",
    "apollo-server-koa": "2.22",
    "archiver": "^5.3.0",
    "base64url": "^3.0.1",
    "bcrypt": "^5.0.1",
    "btoa": "^1.2.1",
    "combined-stream": "^1.0.8",
    "cookie": "^0.4.1",
    "cron": "^1.8.2",
    "dataloader": "^2.0.0",
    "date-fns": "^2.23.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.1",
    "graphql-tools": "^7.0.5",
    "graphql-type-json": "^0.3.2",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.0.1",
    "koa-morgan": "^1.0.1",
    "koa-passport": "^4.1.4",
    "koa-session": "^6.2.0",
    "mongodb": "^3.6.6",
    "nanoid": "^3.1.23",
    "node-fetch": "^2.6.1",
    "object-hash": "^2.2.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-oauth": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "pg": "^8.6.0",
    "pg-cursor": "^2.6.0",
    "pg-query-stream": "^4.1.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "rimraf": "^3.0.2",
    "sift": "^13.5.4",
    "unzipper": "^0.10.11",
    "wkt": "^0.1.1"
  },
  "author": "zach@saeon.ac.za, steven@saeon.ac.za",
  "license": "MIT"
}
