{
  "name": "@catalogue/api",
  "version": "0.0.220",
  "description": "Node.js/Express.js application supporting the @saeon/client application",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon --ext js,graphql,json --watch ./src --watch ../../packages/catalogue-search/src --exec 'prettier --write \"src/**/*.@(js|json|graphql)\" && NODE_ENV=development TZ=utc node --no-warnings --experimental-top-level-await --experimental-json-modules src'",
    "start:prod": "NODE_ENV=production TZ=utc node --no-warnings --experimental-top-level-await --experimental-json-modules src",
    "check-package-updates": "ncu",
    "update-package-dependencies": "ncu -u"
  },
  "keywords": [
    "@saeon/api"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEONData/catalogue.git"
  },
  "bugs": {
    "url": "https://github.com/SAEONData/catalogue/issues"
  },
  "homepage": "https://github.com/SAEONData/catalogue/tree/master/src/@saeon/api#readme",
  "devDependencies": {
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1"
  },
  "dependencies": {
    "@koa/router": "^9.4.0",
    "@saeon/logger": "^3.1.16",
    "apollo-server-koa": "^2.17.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "bcrypt": "^5.0.0",
    "cookie": "^0.4.1",
    "dataloader": "^2.0.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.2.1",
    "graphql-type-json": "^0.3.2",
    "koa": "^2.13.0",
    "koa-compress": "^5.0.1",
    "koa-proxies": "^0.11.0",
    "mongodb": "^3.6.1",
    "nanoid": "^3.1.12",
    "node-fetch": "^2.6.1",
    "sift": "^13.3.1",
    "wkt": "^0.1.1"
  },
  "author": "zach@saeon.ac.za, steven@saeon.ac.za",
  "license": "MIT"
}
