# Build client
FROM node:14.15 as build

ARG CATALOGUE_API_ADDRESS
ARG CATALOGUE_API_GQL_ADDRESS
ARG CATALOGUE_API_GQL_SUBSCRIPTIONS_ADDRESS
ARG CATALOGUE_CLIENT_AUTH_REDIRECT_URL
ARG CATALOGUE_CLIENT_ADDRESS
ARG CATALOGUE_DEPLOYMENT_ENV
ARG CATALOGUE_CLIENT_DEFAULT_NOTICES
ARG CATALOGUE_LATEST_COMMIT
ARG CATALOGUE_CLIENT_AUTH_ID
ARG CATALOGUE_CLIENT_AUTH_ENDPOINT 
ARG CATALOGUE_CLIENT_AUTH_LOGOUT_ENDPOINT
ARG CATALOGUE_CLIENT_AUTH_TOKEN_ENDPOINT
ARG CATALOGUE_CLIENT_AUTH_REQUESTED_SCOPES
ARG CATALOGUE_CLIENT_AUTH
ARG CATALOGUE_CLIENT_FILTER_CONFIG_PATH

WORKDIR /app
RUN echo "CATALOGUE_API_ADDRESS=$CATALOGUE_API_ADDRESS" > .env
RUN echo "CATALOGUE_API_GQL_ADDRESS=$CATALOGUE_API_GQL_ADDRESS" >> .env
RUN echo "CATALOGUE_API_GQL_SUBSCRIPTIONS_ADDRESS=$CATALOGUE_API_GQL_SUBSCRIPTIONS_ADDRESS" >> .env
RUN echo "CATALOGUE_CLIENT_AUTH_REDIRECT_URL=$CATALOGUE_CLIENT_AUTH_REDIRECT_URL" >> .env
RUN echo "CATALOGUE_CLIENT_AUTH_ID=$CATALOGUE_CLIENT_AUTH_ID" >> .env
RUN echo "CATALOGUE_CLIENT_AUTH_ENDPOINT=$CATALOGUE_CLIENT_AUTH_ENDPOINT" >> .env
RUN echo "CATALOGUE_CLIENT_AUTH_LOGOUT_ENDPOINT=$CATALOGUE_CLIENT_AUTH_LOGOUT_ENDPOINT" >> .env
RUN echo "CATALOGUE_CLIENT_AUTH_TOKEN_ENDPOINT=$CATALOGUE_CLIENT_AUTH_TOKEN_ENDPOINT" >> .env
RUN echo "CATALOGUE_CLIENT_AUTH_REQUESTED_SCOPES=$CATALOGUE_CLIENT_AUTH_REQUESTED_SCOPES" >> .env
RUN echo "CATALOGUE_CLIENT_AUTH=$CATALOGUE_CLIENT_AUTH" >> .env
RUN echo "CATALOGUE_CLIENT_ADDRESS=$CATALOGUE_CLIENT_ADDRESS" >> .env
RUN echo "CATALOGUE_DEPLOYMENT_ENV=$CATALOGUE_DEPLOYMENT_ENV" >> .env
RUN echo "CATALOGUE_CLIENT_DEFAULT_NOTICES=$CATALOGUE_CLIENT_DEFAULT_NOTICES" >> .env
RUN echo "CATALOGUE_LATEST_COMMIT=$CATALOGUE_LATEST_COMMIT" >> .env
RUN echo "CATALOGUE_CLIENT_FILTER_CONFIG_PATH=$CATALOGUE_CLIENT_FILTER_CONFIG_PATH" >> .env
COPY . .
RUN npm ci --only=production
RUN npm run build

# Serve static files
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx/nginx.conf /etc/nginx/nginx.conf
COPY nginx/localhost.conf /etc/nginx/conf.d/default.conf
EXPOSE 80