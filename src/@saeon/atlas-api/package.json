{
  "name": "@saeon/atlas-api",
  "version": "0.0.1",
  "description": "Node.js/Express.js application supporting the @saeon/atlas-client application",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --exec \"npm-run-all -s prettier server\"",
    "prettier": "prettier --write \"src/**/*.@(js|graphql)\"",
    "server": "TZ=utc NODE_ENV=development babel-node src/bin/index.js",
    "start:prod": "NODE_ENV=production npm-run-all clean:prod build:prod copy:gqlschema copy:env server:prod",
    "clean:prod": "rimraf ./dist",
    "build:prod": "babel ./src --out-dir dist",
    "copy:gqlschema": "copyfiles -u 1 ./src/schema.graphql dist/",
    "copy:env": "copyfiles ./.env dist/",
    "server:prod": "TZ=utc node ./dist/bin"
  },
  "keywords": [
    "@saeon/atlas-api"
  ],
  "author": "zach@saeon.ac.za",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "copyfiles": "^2.2.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "express-graphql": "^0.9.0",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.6",
    "http-proxy-middleware": "^0.20.0",
    "morgan": "^1.9.1"
  }
}
