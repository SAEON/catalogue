{
  "name": "@saeon/logger",
  "version": "3.1.7",
  "description": "Simple package to add timestamps to console.* statements, as well as a means to extend the console object for alternative logging methods",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "date-fns": ">=2",
    "@apollo/client": ">=3"
  },
  "scripts": {
    "watch": "rimraf dist && nodemon --watch ./src --exec 'prettier --write \"src/**/*.@(js|json)\" && NODE_ENV=development babel --root-mode upward src --out-dir dist'",
    "build": "rimraf ./dist && NODE_ENV=production webpack --env.output=dist",
    "publish:patch": "npm run build && ../../../scripts/publish.sh -p  @saeon/logger -s patch",
    "publish:minor": "npm run build && ../../../scripts/publish.sh -p  @saeon/logger -s minor",
    "publish:major": "npm run build && ../../../scripts/publish.sh -p  @saeon/logger -s major",
    "prettier:watch": "onchange \"src/**/*.@(js)\" -- prettier --write {{changed}}",
    "check-package-updates": "ncu",
    "update-packages": "ncu -u"
  },
  "keywords": [
    "@saeon/logger"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAEONData/saeon-atlas.git"
  },
  "bugs": {
    "url": "https://github.com/SAEONData/saeon-atlas/issues"
  },
  "homepage": "https://github.com/SAEONData/saeon-atlas/tree/master/src/@saeon/logger",
  "author": "zach@saeon.ac.za",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.10.1",
    "babel-loader": "^8.1.0",
    "date-fns": "^2.12.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "devDependencies": {
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  }
}
