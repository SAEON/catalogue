{
  "name": "@saeon/atlas-client",
  "version": "0.0.1",
  "description": "An interactive atlas for interacting with spatial data - specifically SAEON's metadata store, although it should also be a generally useful means of interacting with any OGC-compliant resource.",
  "keywords": [
    "@saeon/atlas-client"
  ],
  "scripts": {
    "build": "npm-run-all -s clean:dist pack copy:public",
    "start": "npm-run-all -s clean:dist copy:public -p onchange dev-server",
    "dev-server": "webpack-dev-server --port 4001 --env.mode=development --env.output=src/@saeon/atlas-client/dist --env.entry=src/@saeon/atlas-client/src/index.jsx --open",
    "onchange": "onchange \"src/**/*.@(js|jsx|css|scss)\" -- prettier --write {{changed}}",
    "clean:dist": "rimraf ./dist",
    "copy:public": "copyfiles -u 1 ./public/* dist",
    "pack": "webpack --env.mode=production --env.output=src/@saeon/atlas-client/dist --env.entry=src/@saeon/atlas-client/src/index.jsx"
  },
  "author": "zach@saeon.ac.za",
  "license": "MIT"
}
