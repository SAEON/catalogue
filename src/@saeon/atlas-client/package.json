{
  "name": "@saeon/atlas-client",
  "version": "0.0.1",
  "description": "An interactive atlas for interacting with spatial data - specifically SAEON's metadata store, although it should also be a generally useful means of interacting with any OGC-compliant resource.",
  "keywords": [
    "@saeon/atlas-client"
  ],
  "scripts": {
    "build": "webpack --env.mode=production --env.entry=src/@saeon/atlas-client/src/index.jsx",
    "start": "npm-run-all -p onchange dev-server",
    "onchange": "onchange \"src/**/*.@(js|jsx|css|scss)\" -- prettier --write {{changed}}",
    "dev-server": "webpack-dev-server --env.mode=development --env.entry=src/@saeon/atlas-client/src/index.jsx --env.port=3001 --open"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "webpack-dev-server": "^3.10.3",
    "webpack": "^4.41.6"
  },
  "author": "zach@saeon.ac.za",
  "license": "MIT"
}
